<AuModalContainer />
<AuApp>
  <AuMainHeader
    @brandLink="https://www.vlaanderen.be/nl"
    @homeRoute="index"
    @appTitle={{t "title"}}>
    {{#if this.session.isAuthenticated}}
      <AuButton
        @skin="link"
        @icon="logout"
        @iconAlignment="left"
        role="menuitem"
        {{on "click" this.logout}}
      >
        Afmelden
      </AuButton>
    {{/if}}
  </AuMainHeader>
  <AuBodyContainer
    @scroll={{true}}>
    {{!--Use the toaster service to display toasters--}}
    <AuToaster />
    {{outlet}}
  </AuBodyContainer>
</AuApp>
