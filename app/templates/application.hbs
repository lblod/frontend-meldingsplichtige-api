<AuModalContainer />
<AuApp>
  <AuMainHeader
    @brandLink="https://www.vlaanderen.be/nl"
    @homeRoute="index"
    @appTitle={{t "title"}}>
    {{#if this.session.isAuthenticated}}
      <MockLogout
        @tagName="button"
        class="au-c-button au-c-button--naked">
        <AuIcon @icon="logout"/>&nbsp;{{t "logout"}}
      </MockLogout>
    {{/if}}
  </AuMainHeader>
  <AuBodyContainer
    @scroll={{true}}>
    {{!--Use the toaster service to display toasters--}}
    <AuToaster />
    {{outlet}}
  </AuBodyContainer>
</AuApp>