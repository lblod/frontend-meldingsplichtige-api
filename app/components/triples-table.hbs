{{#if @triples}}
  <AuTable @size="default">
    <:header>
      <tr>
        <th>Subject</th>
        <th>Predicate</th>
        <th>Object</th>
      </tr>
    </:header>
    <:body>
      {{#each @triples as |triple|}}
        <tr>
          <td>{{triple.subject}}</td>
          <td>{{triple.predicate}}</td>
          <td>{{triple.object}}</td>
        </tr>
      {{/each}}
    </:body>
  </AuTable>
{{/if}}
