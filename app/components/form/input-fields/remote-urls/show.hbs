<AuLabel {{did-insert this.loadData}}>{{@field.label}}</AuLabel>
<table class="data-table">
  <tbody data-test-mn="url-box-list">
  {{#each this.remoteUrls as |remoteUrl|}}
    <tr>
      <td>
        <Input
                class="input-field input-field--block input-field--small"
                @value={{remoteUrl.address}}
                @disabled={{true}}
        />
        <div class="button-group u-spacer--top--tiny">
          <a href={{remoteUrl.address}} target="_blank" rel="noopener" class="u-spacer--bottom--tiny button button--small button--alt"><i class="vi vi-external"></i>Bekijk link</a>
          {{#if remoteUrl.downloadLink}}
            <a href={{remoteUrl.downloadLink}} download class="u-spacer--bottom--tiny button button--small button--alt"><i class="vi vi-document-small"></i>Download opgeslagen pagina<sup>*</sup></a>
          {{/if}}
        </div>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
{{#if this.remoteUrls.length}}
  <p class="smallest u-spacer--bottom--tiny"><sup>*</sup>Op het moment van versturen, wordt er een versie gedownload van de pagina die op de link te vinden is.</p>
{{else}}
  <p class="small u-spacer--bottom--tiny text-fade">Er werden geen links toegevoegd.</p>
{{/if}}

{{#if this.errors}}
  <WuAlert title={{'Er liep iets mis'}}>
    <ul>
      {{#each this.errors as |error|}}
        <li>{{error.resultMessage}}</li>
      {{/each}}
    </ul>
  </WuAlert>
{{/if}}
